<UserControl
    x:Class="LenovoLegionToolkit.WPF.Controls.Dashboard.Modern.QuickSettingsCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="180"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <wpfui:Card Padding="20">
        <StackPanel>
            <!-- Header -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border
                    Grid.Column="0"
                    Width="40"
                    Height="40"
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="8">
                    <wpfui:SymbolIcon
                        FontSize="20"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Symbol="BatteryCharge24" />
                </Border>

                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Text="{x:Static resources:Resource.DashboardPage_Power_Title}" />
                    <TextBlock
                        x:Name="_powerStatus"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="Status" />
                </StackPanel>
            </Grid>

            <!-- Quick Settings Grid -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Battery Mode -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,0">
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="{x:Static resources:Resource.BatteryModeControl_Title}" />
                    <ComboBox
                        x:Name="_batteryModeComboBox"
                        Margin="0,4,0,0"
                        MinWidth="120"
                        Visibility="Hidden" />
                </StackPanel>

                <!-- Always On USB -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,0">
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="{x:Static resources:Resource.AlwaysOnUSBControl_Title}" />
                    <ComboBox
                        x:Name="_alwaysOnUsbComboBox"
                        Margin="0,4,0,0"
                        MinWidth="120"
                        Visibility="Hidden" />
                </StackPanel>

                <!-- Hybrid Mode -->
                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,8,0">
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="{x:Static resources:Resource.ComboBoxHybridModeControl_Title}" />
                    <ComboBox
                        x:Name="_hybridModeComboBox"
                        Margin="0,4,0,0"
                        MinWidth="120"
                        Visibility="Hidden" />
                </StackPanel>

                <!-- Discrete GPU -->
                <StackPanel x:Name="_discreteGpuPanel" Grid.Row="2" Grid.Column="1" Margin="8,0,0,0">
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="{x:Static resources:Resource.DiscreteGPUControl_Title}" />
                    <TextBlock
                        x:Name="_discreteGpuStatus"
                        Margin="0,4,0,0"
                        FontSize="14"
                        FontWeight="Medium"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Text="-" />
                </StackPanel>
            </Grid>
        </StackPanel>
    </wpfui:Card>
</UserControl>
