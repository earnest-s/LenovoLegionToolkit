<UserControl
    x:Class="LenovoLegionToolkit.WPF.Controls.KeyboardBacklight.RGB.LoqKeyboardPreview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    SnapsToDevicePixels="True"
    UseLayoutRounding="True">

    <!--
        Per-key LOQ 15IRX9 keyboard preview.
        A fixed-size Canvas (1090×292) is scaled via ViewBox to fill available space.
        All key Border elements are created programmatically in code-behind.
    -->
    <Viewbox Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
        <!-- chassis background: dark rounded rectangle behind every key -->
        <Border
            Width="1108"
            Height="308"
            Background="#1A1A1F"
            CornerRadius="10"
            Padding="9 8 9 8">

            <!-- fixed-coordinate canvas — key Borders are added here in code-behind -->
            <Canvas
                x:Name="KeyCanvas"
                Width="1090"
                Height="292"
                ClipToBounds="True" />
        </Border>
    </Viewbox>
</UserControl>
