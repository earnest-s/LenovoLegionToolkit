<wpfui:UiPage
    x:Class="LenovoLegionToolkit.WPF.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:LenovoLegionToolkit.WPF.Controls"
    xmlns:dashboard="clr-namespace:LenovoLegionToolkit.WPF.Controls.Dashboard"
    xmlns:modern="clr-namespace:LenovoLegionToolkit.WPF.Controls.Dashboard.Modern"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    xmlns:utils="clr-namespace:LenovoLegionToolkit.WPF.Utils"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{x:Static resources:Resource.DashboardPage_Title}"
    FlowDirection="{x:Static utils:LocalizationHelper.Direction}"
    Initialized="DashboardPage_Initialized"
    Scrollable="True"
    SizeChanged="DashboardPage_SizeChanged">

    <controls:LoadableControl
        x:Name="_loader"
        Margin="0,0,0,12"
        IndicatorMargin="0,64,0,0">
        <StackPanel Margin="0,16,16,0">
            <!-- Modern Sensors Panel (CPU/GPU Cards) -->
            <modern:ModernSensorsPanel x:Name="_modernSensors" Margin="0,0,0,16" />

            <!-- Power Mode Card -->
            <modern:PowerModeCard x:Name="_powerModeCard" Margin="0,0,0,16" />

            <!-- Quick Settings Card -->
            <modern:QuickSettingsCard x:Name="_quickSettingsCard" Margin="0,0,0,16" />

            <!-- GPU Overclock Card -->
            <modern:GPUOverclockCard x:Name="_gpuOverclockCard" Margin="0,0,0,16" />

            <!-- Legacy Dashboard Groups -->
            <Grid x:Name="_content" />

            <!-- Customize Link -->
            <wpfui:Hyperlink
                x:Name="_customizeLink"
                Margin="0,16,0,0"
                HorizontalAlignment="Center"
                Content="{x:Static resources:Resource.DashboardPage_Customize}"
                Icon="Edit24" />
        </StackPanel>
    </controls:LoadableControl>

</wpfui:UiPage>
