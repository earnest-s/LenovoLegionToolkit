<UserControl
    x:Class="LenovoLegionToolkit.WPF.Controls.KeyboardBacklight.RGB.LoqKeyboardPreview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    SnapsToDevicePixels="True"
    UseLayoutRounding="True">

    <!--
        Per-key LOQ 15IRX9 keyboard preview.
        ViewBox wraps a fixed-size Canvas (1172Ã—292) to scale to any container size.
        Each key is a Border element positioned on the Canvas at compile-time coordinates.
    -->
    <Viewbox Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
        <!-- Dark chassis panel behind keys -->
        <Border Width="1196" Height="316"
                Background="#1A1A1F"
                CornerRadius="10"
                Padding="12">
            <Canvas x:Name="KeyCanvas"
                    Width="1172" Height="292"
                    ClipToBounds="True" />
        </Border>
    </Viewbox>
</UserControl>
